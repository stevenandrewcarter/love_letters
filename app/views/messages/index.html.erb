<div class="btn-toolbar" role="toolbar">
  <a href="/messages/new" class="btn btn-sm btn-primary btn-group" data-toggle="tooltip" data-placement="top" title="New"><span class="glyphicon glyphicon-file"></span></a>
  <a href="/users/<%= current_user.id %>/messages/unread" class="btn btn-sm btn-default btn-group" data-toggle="tooltip" data-placement="top" title="Mark Selected as Unread"><span class="glyphicon glyphicon-share"></span></a>
  <a href="/users/<%= current_user.id %>/messages/delete" class="btn btn-sm btn-danger btn-group" data-toggle="tooltip" data-placement="top" title="Delete Selected"><span class="glyphicon glyphicon-trash"></span></a>
</div>
<table class="table table-condensed table-hover">
  <thead>
  <tr>
    <th width="1%"></th>
    <th>Title</th>
    <th>From</th>
    <th>Sent</th>
  </tr>
  </thead>
  <% @messages.order(created_at: :desc).each do |received_message| %>
    <tr <% unless received_message.read %>class="info"<% end %>>
      <td><input type="checkbox"></td>
      <td><%= link_to received_message.message.title, message_path(received_message.message.id) %></td>
      <td><%= received_message.sender.username %></td>
      <td><%= received_message.created_at %></td>
    </tr>
  <% end %>
</table>