<div class="row">
  <div class="col-md-2 col-md-offset-11">
    <p>Favourites: <span class="badge"><%= current_user.favourites.count %></span></p>
  </div>
</div>
<table id="messages" class="table table-condensed table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th width="5%"></th>
  </tr>
  </thead>
  <% @favourites.order(created_at: :desc).each do |favourite| %>
    <tr id="<%= favourite.id %>">
      <td><%= link_to favourite.favourite_user.username, user_path(favourite.id) %></td>
      <td>
        <div class="btn-group" role="toolbar">
          <a href="/messages/new?recipient_id=<%= favourite.favourite_user.id %>" class="btn btn-xs btn-primary btn-group" data-toggle="tooltip" data-placement="top" title="Message"><span class="glyphicon glyphicon-file"></span></a>
          <% if current_user.has_favourite?(favourite.favourite_user) %>
            <a href="" onclick="window.app.removeFromFavourites(<%= current_user.id %>, <%= favourite.favourite_user.id %>)" class="btn btn-xs btn-default btn-group" data-toggle="tooltip" data-placement="top" title="Favourite"><span class="glyphicon glyphicon-star"></span></a>
          <% else %>
            <a href="" onclick="window.app.addToFavourites(<%= current_user.id %>, <%= favourite.favourite_user.id %>)" class="btn btn-xs btn-default btn-group" data-toggle="tooltip" data-placement="top" title="Favourite"><span class="glyphicon glyphicon-star-empty"></span></a>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>