<div class="col-sm-6 col-md-4">
  <div class="panel panel-default thumbnail">
    <div class="panel-heading">
      <h3>Profile <%= current_user.profile.complete %> %</h3>
    </div>
    <div class="panel-body">
      <canvas id="profileChart" width="100" height="100" class="center-block"></canvas>
      <p><a href="/users/<%= current_user.id %>/profile/<%= current_user.profile.id %>" class="btn btn-xs btn-primary btn-block" data-toggle="tooltip" data-placement="top" title="Information">View</a>
      </p>
    </div>
  </div>
</div>

<script>
  var doughnutData = [
    {
      value: <%= current_user.profile.complete %>,
      color: "#F7464A"
    },
    {
      value: 100 - <%= current_user.profile.complete %>,
      color: "#FFFFFF"
    }
  ];
  var myDoughnut = new Chart(document.getElementById("profileChart").getContext("2d")).Doughnut(doughnutData);
</script>