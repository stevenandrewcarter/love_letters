<div class="container-fluid">
  <div class="row">
    <h2>Information</h2>
    <%= render 'messages' %>

    <%= render 'favourites' %>

    <%= render 'profile' %>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <h2>Matches
      <small>Suggested</small>
    </h2>
    <% @matches.each do |match| %>
      <div class="col-sm-5 col-md-3">
        <div class="thumbnail">
          <%= image_tag match.profile.photo.url(:thumb) %>

          <div class="caption">
            <h3><%= match.username %></h3>

            <p><a href="/users/<%= match.id %>" class="btn btn-xs btn-primary btn-block" data-toggle="tooltip" data-placement="top" title="Information">More</a></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/suggested_events', suggested_events: @suggested_events %>
